<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Create a New Job!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Company Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Enter Company Name">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="https://source.unsplash.com/TCCCKgdFmBo">
                </div>
                <div class="form-group">
                    <label for="cost">Salary</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="Enter Salary" step="50000" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Enter Location">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea type="text" name="description" class="form-control" placeholder="Enter Description" required></textarea>
                    <!-- <input class="form-control" type="textarea" name="description" id="description" placeholder="Enter Information!."> -->
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>


